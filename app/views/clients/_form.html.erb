<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> No se pudo guardar el cliente:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container fs-5">
    <div>
      <%= form.label :Nombre, style: "display: block" %>
      <%= form.text_field :name %>
    </div><br>

    <div>
      <%= form.label :Edad, style: "display: block" %>
      <%= form.text_field :age %>
    </div><br>

    <div>
      <%= form.label :movie_id, style: "display: block" %>
     <%= form.collection_select :movie_id, Movie.all, :id, :name %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  </div>
<% end %>
